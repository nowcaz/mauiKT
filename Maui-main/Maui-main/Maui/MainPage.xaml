<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MainPage">

    <Grid>
        <Image 
            Source="pilt.jpg"
            Aspect="AspectFill"
            Opacity="1"/>
        
        <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Tere tulemast!"
                TextColor="White"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="70"
                HorizontalOptions="Center" />

            <Button
                Text="Vajuta mind..."
                FontSize="30"
                Clicked="OnNavigateButtonClicked"
                BackgroundColor="LightBlue"
                TextColor="White"
                BorderColor="White"
                FontAttributes="Bold"
                CornerRadius="6"
                HeightRequest="60"
                WidthRequest="300"
                HorizontalOptions="Center" 
                VerticalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
        </Grid>
</ContentPage>